<div id="signupbox"  class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="panel-title">Sign Up</div>
        
    </div>  
    <div class="panel-body" >
       
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),:id=>"signupform") do |f| %>
            <div id="signupalert" style="display:none" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
            </div>
                            
              
<div class="form-inputs">
<%= f.input :name, required: true %>
<%= f.input :email, required: true, autofocus: true %>
<%= f.input :dob, required: true, autofocus: true %>
<%= f.input :company_name, required: true, autofocus: true %>
<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
<%= f.input :password_confirmation, required: true %>
<%= f.input :profile_picture, required: true %>
</div>
                
            

<div class="form-group">
<!-- Button -->                                        
<div class="col-md-offset-3 col-md-9">

<%= f.button :submit, "Sign up",:class=>"btn btn-info" %>
</div>
<%= render "users/shared/links" %>
</div>


<%end%>
</div>
</div>




</div> 