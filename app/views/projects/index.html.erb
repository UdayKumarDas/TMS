
<p id="notice"><%= notice %></p>

<h3 class="text-center" >Listing Projects</h3>


<div class="container-fluid">
<div class = "row"  >
    <% @projects.each do |project| %>
   <div class = "col-sm-6 col-md-3" style="margin-top:15px;">
      <div  style="height:200px;">
         <%= image_tag(project.picture.url,:size=>"200x250") %>
      </div>
      
      <div class = "caption">
      <br><br>
         <h3><%= link_to project.name, project,:style=>"text-decoration: none;background-color:transparent;"%></h3>
         <p><%= project.description %></p>
         
         <p>
            
            <%= link_to 'Show', project,:class => "btn btn-primary" ,:style=>"color:white;"%>
            <%unless project.admin_id != current_user.id%>
            <%= link_to 'Edit', edit_project_path(project),:class => "btn btn-primary" ,:style=>"color:white;" %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-primary" ,:style=>"color:white;"%>
            <%else%>
              <p>Created by <%= project.user.name%> on <%= project.created_at.strftime("%d-%m-%Y")%>.</p>
            <%end%>
          
         </p>
         
      </div>
   </div>
   <%end%>


   </div>
</div>
<br>


