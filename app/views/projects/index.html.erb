<div class="container-fluid">
<div class = "row"  >
    <% @projects.each do |project| %>
   <div class = "col-sm-6 col-md-3">
      <div  style="height:200px;">
         <%= image_tag(project.picture.url,:size=>"200x250") %>
      </div>
      
      <div class = "caption">
      <br><br>
         <h3><%= project.name %></h3>
         <p><%= project.description %></p>
         
         <p>
            
            <%= link_to 'Show', project,:class => "btn btn-primary" %>
            <%unless project.admin_id != current_user.id%>
            <%= link_to 'Edit', edit_project_path(project),:class => "btn btn-primary" %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-primary"%>
            <%end%>
          
         </p>
         
      </div>
   </div>
   <%end%>


   </div>
</div>
